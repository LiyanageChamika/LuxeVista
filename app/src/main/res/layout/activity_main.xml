<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/h5"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ABC9E4"
        android:foregroundTint="#ABC9E4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="cursive"
            android:text="LuxeVista Resort"
            android:textColor="#093965"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/h3" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#093965"
            android:text="Login" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Register" />

        <Button
            android:id="@+id/btnServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Services" />


        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Book Now" />

        <Button
            android:id="@+id/btnRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Rooms" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Gallery" />

        <Button
            android:id="@+id/btnContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#093965"
            android:text="Contact Us" />

        <Button
            android:id="@+id/btnOwner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#093947"
            android:text="Owner Login" />


    </LinearLayout>
</ScrollView>